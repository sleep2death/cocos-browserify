{
  "name": "c2",
  "version": "0.0.1",
  "description": "The boilerplate & toolset to make [cocos2d-js] game!",
  "main": "src/index.js",
  "scripts": {
    "start": "gulp",
    "test": "xo && mocha"
  },
  "keywords": [
    "pixi-ejecta",
    "html5",
    "pixi",
    "ejecta",
    "es6"
  ],
  "author": "aspirin2d@outlook.com",
  "license": "ISC",
  "dependencies": {
    "glslify": "^5.1.0",
    "hammerjs": "^2.0.8"
  },
  "xo": {
    "esnext": true,
    "env": [
      "node",
      "browser"
    ],
    "rules": {
      "curly": 0,
      "keyword-spacing": 0,
      "guard-for-in": 0,
      "xo/filename-case": 0,
      "babel/object-shorthand": 0,
      "max-params": [
        "error",
        5
      ]
    },
    "space": 2,
    "semicolon": false,
    "globals": [
      "cc"
    ],
    "ignores": [
      ""
    ]
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "del": "^2.2.1",
    "glslify": "^5.1.0",
    "gulp": "^3.9.1",
    "gulp-buffer": "0.0.2",
    "gulp-header": "^1.8.7",
    "gulp-jsdoc3": "^0.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.7",
    "lodash.assign": "^4.1.0",
    "mocha": "^3.0.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0",
    "xo": "^0.16.0"
  }
}
